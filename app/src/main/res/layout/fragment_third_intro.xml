<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app"
    tools:context=".ui.intro.ThirdIntroFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/intro_first_third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        app:cardCornerRadius="16dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/third_intro_pict"
            android:scaleType="centerCrop"
            android:src="@drawable/intro_pict_3" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/intro_text_title_third"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="@string/intro_third_text_title"
        android:textColor="@color/color_4"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/intro_first_third" />

    <TextView
        android:id="@+id/intro_text_desc_third"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/intro_third_text_desc"
        android:textColor="@color/color_4"
        android:textSize="20sp"
        android:textStyle="normal"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@+id/intro_text_title_third" />

    <ImageView
        android:id="@+id/intro_bar_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:contentDescription="@string/intro_bar"
        android:src="@drawable/intro_bar_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.085"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/btn_finish_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:text="@string/intro_finish"
        android:textColor="@color/color_4"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.905"
        app:layout_constraintStart_toStartOf="parent" />





</androidx.constraintlayout.widget.ConstraintLayout>